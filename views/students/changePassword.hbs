
{{#if message}}
<div class="alert alert-danger alert-dismissible fade show col-md-3" id="alert">
  {{message}}
  <button type="button" class="close" data-dismiss="alert">&times;</button></div>
{{/if}}

<form action="/students/newPass" method="post" id="form_update_pass">
  <div class="form-group col-md-3" id="divOldPass">
    <label for="oldPass">Nhập mật khẩu cũ:</label>
    <input type="password" class="form-control" id="oldPass" name="oldPass">
  </div>

  <div class="form-group col-md-3" id="divNewPass">
    <label for="newPass">Nhập mật khẩu mới</label>
    <input type="password" class="form-control" id="newPass" name="newPass">
  </div>

  <div class="form-group col-md-3" id="divNewPassAgain">
    <label for="newPassAgain">Nhập lại mật khẩu mới</label>
    <input type="password" class="form-control" id="newPassAgain" name="newPassAgain">
  </div>

  <div class="col-md-3">
    <button type="submit" class="btn btn-success">Cập nhật</button>
  </div>
</form>